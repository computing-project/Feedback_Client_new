<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:fontFamily="sans-serif-black"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/button3"
            android:text="Hello, Xxxxxx Xxxxxx"
            android:textAlignment="center"
            android:textColor="#DD000000"
            android:textSize="48sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="445dp"
            android:layout_height="90dp"
            android:layout_above="@id/button4"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_login"
            android:text="Assessment Preparation"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="445dp"
            android:layout_height="90dp"
            android:textAllCaps="false"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_realtime"
            android:text="Real-Time Assessment"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="445dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:background="@drawable/rounded_report"
            android:layout_marginTop="25dp"
            android:layout_below="@id/button4"
            android:text="Review and Report"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>