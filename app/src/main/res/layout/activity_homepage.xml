<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="135dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginRight="5dp"
                android:layout_weight="100"
                android:fontFamily="sans-serif-light"
                android:gravity="right"
                android:text="Help"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="14sp" />

            <View
                android:id="@+id/divider11"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#9D000000" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:text="Log Out"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:fontFamily="sans-serif-black"
            android:text="Hello, Xxxxxx Xxxxxx"
            android:textAlignment="center"
            android:textColor="#DD000000"
            android:textSize="48sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="445dp"
            android:layout_height="90dp"
            android:layout_above="@id/button4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_preparation"
            android:text="Assessment Preparation"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="445dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_realtime"
            android:text="Real-Time Assessment"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="445dp"
            android:layout_height="90dp"
            android:layout_below="@id/button4"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_report"
            android:text="Review and Report"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>