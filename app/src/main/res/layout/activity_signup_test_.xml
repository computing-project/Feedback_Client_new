<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupTest_Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_login_insignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Log In "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#9D000000"
                android:textSize="26sp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#FA030202" />

            <TextView
                android:id="@+id/textView_signup_insignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign Up"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#DD000000"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            android:background="#33014085">

            <EditText
                android:id="@+id/editText_firstName_insignup"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="55dp"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@drawable/ic_user_email"
                android:drawablePadding="5dp"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

            <EditText
                android:id="@+id/editText_middleName_insignup"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/ic_user_email"
                android:layout_below="@+id/editText_firstName_insignup"
                android:hint="Middle Name (optional)"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_white"
                android:drawablePadding="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

            <EditText
                android:id="@+id/editText_lastname_insignup"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/ic_user_email"
                android:layout_below="@+id/editText_middleName_insignup"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_white"
                android:drawablePadding="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

            <EditText
                android:id="@+id/editText_email_insignup"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/ic_email"
                android:layout_below="@+id/editText_lastname_insignup"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/rounded_white"
                android:drawablePadding="5dp"
                android:paddingLeft="19dp"
                android:paddingRight="20dp"/>

            <EditText
                android:id="@+id/editText_password_insignup"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/ic_user_password"
                android:layout_below="@+id/editText_email_insignup"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/rounded_white"
                android:drawablePadding="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

            <EditText
                android:id="@+id/editText_confirmPassword_insignup"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:drawableLeft="@drawable/ic_user_password"
                android:layout_below="@+id/editText_password_insignup"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:background="@drawable/rounded_white"
                android:drawablePadding="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>



            <Button
                android:id="@+id/button_signup_insignup"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_below="@+id/editText_confirmPassword_insignup"
                android:onClick="signup"
                android:text="Submit"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/rounded_login"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#ffffff"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>