<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_add_student"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">

    <EditText
        android:id="@+id/editText_studentID_addStudent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Student ID"
        android:gravity="center"
        android:minHeight="45dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_firstName_addStudent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint=" First Name"
        android:gravity="center"
        android:minHeight="45dp"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/editText_middleName_addStudent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint=" Middle Name"
        android:gravity="center"
        android:minHeight="45dp"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/editText_surname_addStudent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint=" Surname"
        android:gravity="center"
        android:minHeight="45dp"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/editText_email_addStudent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint=" Email"
        android:gravity="center"
        android:minHeight="45dp"
        android:textSize="18sp" />


</LinearLayout>