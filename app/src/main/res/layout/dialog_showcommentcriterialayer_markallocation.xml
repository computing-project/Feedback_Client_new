<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout_top_showComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_done_showComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Done" />

        <Button
            android:id="@+id/button_plus_showComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="+" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_criteriaName_showComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout_top_showComments"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ExpandableListView
        android:id="@+id/expandablelistView_dialogShowCommentCriteriaLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView_criteriaName_showComment" />
</RelativeLayout>
