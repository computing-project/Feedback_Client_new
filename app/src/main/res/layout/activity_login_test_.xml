<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginTest_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Login_inlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Log In "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#DD000000"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#FA050202" />

            <TextView
                android:id="@+id/textView_signup_inlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text=" Sign Up"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#9D000000"
                android:textSize="26sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0099FF">

            <Button
                android:id="@+id/buttonLogin_inlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_password_inlogin"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:onClick="login"
                android:text="Login" />

            <EditText
                android:id="@+id/editText_email_inlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:autofillHints=""
                android:ems="10"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:paddingTop="50dp" />

            <EditText
                android:id="@+id/editText_password_inlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_email_inlogin"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:hint="password"
                android:inputType="textPassword" />
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>